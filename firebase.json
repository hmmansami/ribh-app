{
    "hosting": {
        "public": "public",
        "cleanUrls": true,
        "trailingSlash": false,
        "ignore": [
            "firebase.json",
            "**/.*",
            "**/node_modules/**"
        ],
        "headers": [
            {
                "source": "**/*.@(js|css)",
                "headers": [
                    { "key": "Cache-Control", "value": "max-age=31536000" }
                ]
            }
        ],
        "rewrites": [
            {
                "source": "/api/**",
                "function": "api",
                "region": "europe-west1"
            },
            {
                "source": "/oauth/**",
                "function": "api",
                "region": "europe-west1"
            },
            {
                "source": "/webhooks/**",
                "function": "api",
                "region": "europe-west1"
            },
            {
                "source": "/shopify/**",
                "function": "api",
                "region": "europe-west1"
            },
            {
                "source": "/app",
                "function": "api",
                "region": "europe-west1"
            },
            {
                "source": "/salla/**",
                "function": "api",
                "region": "europe-west1"
            }
        ]
    },
    "functions": [
        {
            "source": "functions",
            "codebase": "default",
            "runtime": "nodejs20",
            "ignore": [
                "node_modules",
                ".git",
                "firebase-debug.log",
                "firebase-debug.*.log",
                "*.local"
            ],
            "predeploy": [
                "npm --prefix \"$RESOURCE_DIR\" run lint || true"
            ]
        }
    ],
    "emulators": {
        "functions": {
            "port": 5001
        },
        "firestore": {
            "port": 8080
        },
        "hosting": {
            "port": 5000
        },
        "ui": {
            "enabled": true
        }
    }
}
