{
    "hosting": {
        "public": "public",
        "cleanUrls": true,
        "trailingSlash": false,
        "ignore": [
            "firebase.json",
            "**/.*",
            "**/node_modules/**"
        ],
        "headers": [
            {
                "source": "**/*.@(js|css)",
                "headers": [
                    { "key": "Cache-Control", "value": "no-cache, must-revalidate" }
                ]
            },
            {
                "source": "**/*.html",
                "headers": [
                    { "key": "Cache-Control", "value": "no-cache, must-revalidate" }
                ]
            }
        ],
        "rewrites": [
            {
                "source": "/api/**",
                "function": "api",
                "region": "europe-west1"
            },
            {
                "source": "/oauth/**",
                "function": "api",
                "region": "europe-west1"
            },
            {
                "source": "/webhooks/**",
                "function": "api",
                "region": "europe-west1"
            },
            {
                "source": "/shopify/**",
                "function": "api",
                "region": "europe-west1"
            },
            {
                "source": "/salla/**",
                "function": "api",
                "region": "europe-west1"
            }
        ]
    },
    "emulators": {
        "functions": {
            "port": 5001
        },
        "firestore": {
            "port": 8080
        },
        "hosting": {
            "port": 5000
        },
        "ui": {
            "enabled": true
        }
    }
}
